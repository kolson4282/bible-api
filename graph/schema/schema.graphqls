# GraphQL schema example
#
# https://gqlgen.com/getting-started/

enum Gender {
  male
  female
  none
}

type Character {
  id: Int!
  name: String!
  description: String!
  gender: Gender!
}

input NewCharacter {
  name: String!
  description: String!
  gender: Gender
}

type Query {
  characters(id: Int, name: String): [Character!]!
}

type Mutation {
  createCharacter(input: NewCharacter!): Character!
}
