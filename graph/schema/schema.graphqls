# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Character {
  id: Int!
  name: String!
  description: String!
}

input NewCharacter {
  name: String!
  description: String!
}

type Query {
  characters(id: Int, name: String): [Character!]!
}

type Mutation {
  createCharacter(input: NewCharacter!): Character!
}
